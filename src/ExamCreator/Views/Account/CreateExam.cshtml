@using ExamCreator.Models;
 
@{ 
    Layout = null;

    List<Post> posts = ViewBag.Posts as List<Post>;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exam Creator - Create</title>

