                        <label class="flex-shrink mr-2" for="">C)</label>
                        <input name="ansQ1C" id="frmAnsQ1C" class="transition ease-in-out py-1 px-2 flex-grow border border-gray-400 hover:border-gray-600 rounded shadow-md" type="text" placeholder="Cevap içeriği">
                    </div>
                    <div class="flex items-center">
                        <label class="flex-shrink mr-2" for="">D)</label>
                        <input name="ansQ1D" id="frmAnsQ1D" class="transition ease-in-out py-1 px-2 flex-grow border border-gray-400 hover:border-gray-600 rounded shadow-md" type="text" placeholder="Cevap içeriği">
                    </div>
                </div>

                <div class="flex w-full justify-center mt-2">
                    <div class="flex items-center">
                        <select class="mb-2 border transition ease-in-out border-gray-400 hover:border-gray-600 p-2 rounded shadow-md" name="rightAnswer1" id="frmRightAnswer1">
                            <option value="0" selected disabled>Doğru cevap seç</option>
                            <option value="1">A Şıkkı</option>
                            <option value="2">B Şıkkı</option>
                            <option value="3">C Şıkkı</option>
