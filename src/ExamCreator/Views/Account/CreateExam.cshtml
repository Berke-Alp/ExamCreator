</head>
<body>

    <header class="w-full border-b border-gray-300">
        <nav class="flex p-3 items-center justify-between">
            <a class="text-xl font-bold" href="/">Exam Creator</a>
            <ul class="flex space-x-5">
                <li><a class="pb-1 transition ease-in-out border-b border-transparent hover:border-gray-200 text-gray-600 hover:text-gray-800" href="/Account">Sınavlar</a></li>
                <li><a class="pb-1 transition ease-in-out border-b border-transparent hover:border-gray-200 text-gray-600 hover:text-gray-800" href="/Account/CreateExam">Sınav Oluştur</a></li>
                <li><a class="pb-1 transition ease-in-out border-b border-transparent hover:border-red-200 text-red-600 hover:text-red-800" href="/Account/Logout">Çıkış</a></li>
            </ul>
        </nav>
    </header>

    <main role="main" class="flex flex-col space-y-5 w-full px-5 mt-5">

        <!-- Yazı seçme alanı -->
        <div class="w-full lg:w-2/3 p-5 shadow border rounded-xl h-auto mx-auto">
            <p class="text-lg font-bold mb-2">Yazı</p>
            <select class="mb-2 w-full border transition ease-in-out border-gray-400 hover:border-gray-600 p-2 rounded shadow-md" name="post" id="frmPosts">
                <option value="-1" disabled selected>Bir yazı seçiniz</option>
                @foreach (Post post in posts)
	            {
                    <option value="@post.Id">@post.Title</option>
	            }
            </select>
        </div>

        <div id="afterLoadArea" class="hidden space-y-5">

            <!-- Yazı içeriği -->
            <div class="w-full lg:w-2/3 p-5 shadow border rounded-xl h-auto mx-auto">
                <p class="text-lg font-bold mb-2">İçerik</p>
                <p class="w-full text-justify" id="frmContent"></p>
            </div>

            <!-- Soru 1 -->
            <div class="w-full lg:w-2/3 p-5 shadow border rounded-xl h-auto mx-auto">
                <p class="text-lg font-bold mb-2">Soru 1</p>

                <input name="question1" id="frmQ1" class="transition ease-in-out py-1 px-2 mb-2 flex-grow border border-gray-400 hover:border-gray-600 w-full rounded shadow-md" type="text" placeholder="Soru metni">

                <div class="grid grid-cols-1 md:grid-cols-2 gap-2">

                    <div class="flex items-center">
                        <label class="flex-shrink mr-2" for="">A)</label>
                        <input name="ansQ1A" id="frmAnsQ1A" class="transition ease-in-out py-1 px-2 flex-grow border border-gray-400 hover:border-gray-600 rounded shadow-md" type="text" placeholder="Cevap içeriği">
                    </div>
                    <div class="flex items-center">
                        <label class="flex-shrink mr-2" for="">B)</label>
                        <input name="ansQ1B" id="frmAnsQ1B" class="transition ease-in-out py-1 px-2 flex-grow border border-gray-400 hover:border-gray-600 rounded shadow-md" type="text" placeholder="Cevap içeriği">
                    </div>
